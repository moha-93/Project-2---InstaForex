<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    tools:context=".Fragment.LoginFragment">

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/instaforex"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/txt_login"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="@string/login"
        android:inputType="textPersonName"
        android:ems="10"
        android:textColor="#ffff"
        android:drawableStart="@drawable/ic_account_"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/img_logo"
        android:background="#11000000"
        android:maxLines="1"/>

    <EditText
        android:id="@+id/txt_pass"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="@string/passowrd"
        android:inputType="textPassword"
        android:ems="10"
        android:textColor="#ffff"
        android:layout_below="@id/txt_login"
        android:layout_centerHorizontal="true"
        android:background="#11000000"
        android:drawableStart="@drawable/ic_lock"
        android:layout_marginTop="30dp"
        android:layout_alignStart="@id/txt_login"
        android:maxLines="1"/>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/confirm"
        android:textColor="#fff"
        android:layout_below="@id/txt_pass"
        android:background="@drawable/btn_bg"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/txt_pass_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_confirm"
        android:textColor="#fff"
        android:layout_marginTop="30dp"
        />


</RelativeLayout>